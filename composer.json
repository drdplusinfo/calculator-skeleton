{
  "name": "drd-plus/calculator-skeleton",
  "license": "MIT",
  "type": "project",
  "description": "Style and functionality helper of a DrD+ calculator",
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "granam/strict-object": "^3.0",
    "granam/string": "^3.1",
    "granam/scalar": "^4.0",
    "granam/exceptions-hierarchy": "^4.0",
    "drd-plus/frontend-skeleton": "^1.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "~7.0",
    "mockery/mockery": "~1.0",
    "granam/tools": "^3.0"
  },
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "find ./css/generic/skeleton -type f -name 'frontend-*' -exec rm {} +",
      "cp -r ./vendor/drd-plus/frontend-skeleton/css/generic/skeleton ./css/generic/",
      "find ./images/generic/skeleton -type f -name 'frontend-*' -exec rm {} +",
      "cp -r ./vendor/drd-plus/frontend-skeleton/images/generic/skeleton ./images/generic/",
      "find ./js/generic/skeleton -type f -name 'frontend-*' -exec rm {} +",
      "cp -r ./vendor/drd-plus/frontend-skeleton/js/generic/skeleton ./js/generic/",
      "cp './vendor/drd-plus/frontend-skeleton/web/9 element with id and anchor inside.html' ./web/",
      "cp './vendor/drd-plus/frontend-skeleton/web/10 Only allowed elements are moved to anchor.html' ./web/",
      "cp './vendor/drd-plus/frontend-skeleton/web/15 calculations.html' ./web/",
      "find ./cache -mindepth 2 -type f -exec rm {} +"
    ],
    "post-update-cmd": [
      "php ./vendor/bin/assets --css --dir=css"
    ],
    "post-install-cmd": [
      "php ./vendor/bin/assets --css --dir=css"
    ]
  }
}
